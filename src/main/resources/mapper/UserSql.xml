<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="data.mapper.UserMapper">
    <insert id="join" parameterType="UserDto" useGeneratedKeys="true" keyProperty="id">
        insert into user
            (
             id
             ,nickname
             ,email
             ,profile_image
             ,credit
             ,subscription_date
             ,college_id
             ,provider_id
             ,provider
            )
        values
            (
             null
             ,#{nickname}
             ,#{email}
             ,#{profileImage}
             ,#{credit}
             ,now()
             ,null
             ,#{providerId}
             ,#{provider}
            )
    </insert>
    <select id="findAll" resultType="UserDto">
        SELECT
            *
        FROM
            user
    </select>
    <select id="findById" resultType="userDto" parameterType="int">
        SELECT
            *
        FROM
            user
        where
            id = #{id}
    </select>
    <select id="findByEmail" resultType="int" parameterType="string">
        SELECT
            id
        FROM
            user
        where
            email = #{email}
    </select>
    <select id="isValidEmail" resultType="boolean" parameterType="string">
        SELECT
            count(id)
        FROM
            user
        where
            email = #{email}
    </select>
    <delete id="deleteUser" parameterType="int">
        delete from user
        where
            id = #{id}
    </delete>
</mapper>
